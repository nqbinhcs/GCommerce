<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/LoginLayout"
    android:background="@drawable/login_background"
    tools:context=".Activity.RegisterationActivity"
    android:orientation="vertical"
    android:scaleY="1.018"
    android:scaleX="1.018"
    android:padding="15dp">



    <ImageView
        android:onClick="RegiterationBack"
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backward" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/small_splash"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Get your groceries\ndelivered to your home"
        android:textColor="#06161C"
        android:layout_gravity="center"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>



    <EditText
        android:clickable="true"
        android:id="@+id/Account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/eddittext_background"
        android:drawableLeft="@drawable/account"
        android:drawablePadding="22dp"
        android:padding="13dp"
        android:elevation="3dp"
        android:hint="Your email"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"/>

    <EditText
        android:clickable="true"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/eddittext_background"
        android:drawableLeft="@drawable/account"
        android:drawablePadding="22dp"
        android:padding="13dp"
        android:elevation="3dp"
        android:hint="Your name"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"/>

    <EditText
        android:clickable="true"
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/eddittext_background"
        android:drawableLeft="@drawable/password"
        android:drawableRight="@drawable/visibility"
        android:drawablePadding="22dp"
        android:padding="13dp"
        android:elevation="3dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"/>

    <EditText
        android:clickable="true"
        android:id="@+id/ConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/eddittext_background"
        android:drawableLeft="@drawable/password"
        android:drawableRight="@drawable/visibility"
        android:drawablePadding="22dp"
        android:elevation="3dp"
        android:padding="13dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/signUpMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="16dp"
        android:textColor="#ff0000"
        android:text=""
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/SignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Sign in"
        android:textColor="#F37A20"
        android:textSize="16dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/SignUp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:backgroundTint="@null"
        android:background="@drawable/button_background"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />



</LinearLayout>